generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Fornecedor {
  id             String          @id @default(uuid())
  cnpj           String          @unique
  name           String
  uf             String?
  municipio      String?
  ativo          Boolean         @default(true)
  createdAt      DateTime        @default(now()) @db.Timestamp(6)
  FornecedorCnds FornecedorCnd[]
}

model CndType {
  id             String          @id @default(uuid())
  uf             String?
  municipio      String?
  tipo           String
  instructions   Json
  ativo          Boolean         @default(true)
  createdAt      DateTime        @default(now()) @db.Timestamp(6)
  FornecedorCnds FornecedorCnd[]
}

model FornecedorCnd {
  id           String   @id @default(uuid())
  fornecedorid String
  cndtypeid    String
  file_name    String
  validade     DateTime @db.Date
  ativo        Boolean  @default(true)
  createdAt    DateTime @default(now()) @db.Timestamp(6)
  Fornecedor Fornecedor @relation(fields: [fornecedorid], references: [id])
  CndType    CndType    @relation(fields: [cndtypeid], references: [id])
}
